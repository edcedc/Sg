<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/px30"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/px20"
            android:gravity="bottom|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                style="@style/divider_2"/>

            <TextView
                android:layout_marginLeft="@dimen/px20"
                android:textColor="@color/black"
                android:text="@string/second_killing_buying"
                style="@style/Tv15black" />

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/px40"
                app:isConvertDaysToHours="true"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMillisecond="false"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:isTimeTextBold="true"
                app:suffixGravity="center"
                app:suffixDay=":"
                app:suffixHour=":"
                app:suffixMinute=":"
                app:suffixSecond=""
                app:suffixTextColor="@color/reb_FE2701"
                app:suffixTextSize="@dimen/size24"
                app:timeTextColor="@color/reb_FE2701"
                app:timeTextSize="@dimen/size24"/>

        </LinearLayout>

        <com.fanwang.sg.weight.WithScrollGridView
            android:id="@+id/gridView1"
            android:horizontalSpacing="@dimen/px10"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/px20"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/px20"
            android:gravity="bottom|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                style="@style/divider_2"/>

            <TextView
                android:layout_marginLeft="@dimen/px20"
                android:textColor="@color/black"
                android:text="@string/collage"
                style="@style/Tv15black" />

        </LinearLayout>

        <com.fanwang.sg.weight.WithScrollGridView
            android:id="@+id/gridView2"
            android:horizontalSpacing="@dimen/px10"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>