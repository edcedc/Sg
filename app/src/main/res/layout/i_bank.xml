<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_margin="@dimen/px20"
        android:paddingLeft="@dimen/px20"
        android:paddingTop="@dimen/px30"
        android:paddingBottom="@dimen/px30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:rv_cornerRadius="@dimen/px10"
        app:rv_backgroundColor="@color/white">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Tv15black"/>

        <TextView
            android:layout_marginTop="@dimen/px20"
            android:id="@+id/tv_bank_number"
            style="@style/Tv15black"/>

    </com.flyco.roundview.RoundLinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/px25"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/cb_"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/size30"
        android:button="@null"
        android:drawablePadding="@dimen/px10"
        android:background="@null"
        android:text="设为默认银行卡"
        style="@style/Tv12black" />

    <TextView
        android:id="@+id/tv_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/size30"
        android:text="@string/delete"
        style="@style/Tv12black" />

    </LinearLayout>

</LinearLayout>