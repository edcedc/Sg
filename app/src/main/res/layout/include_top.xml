<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/top_layout"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.yanzhenjie.sofia.StatusView
        android:id="@+id/status_view"
        android:background="@color/white_f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="top"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarLight"
        app:navigationIcon="@mipmap/close"
        app:popupTheme="@style/AppTheme.Popup"
        app:subtitleTextColor="@color/black_3E3A39"
        app:titleTextColor="@color/black_3E3A39">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black_3E3A39"
            android:textSize="19sp" />

        <FrameLayout
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:id="@+id/top_right_fy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right" >


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:background="@mipmap/home_icon_news"
                    android:id="@+id/iv_right"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/px37"
                    android:layout_height="@dimen/px37" />

                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/iv_cirlce"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_marginBottom="@dimen/px20"
                    android:layout_gravity="right|center"
                    android:layout_width="12dp"
                    android:layout_height="12dp">

                    <com.fanwang.sg.weight.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#FE2701"/>

                    <TextView
                        android:id="@+id/tv_circle"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="8sp"
                        style="@style/Tv12Reb" />

                </FrameLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black_3E3A39"
                android:textSize="12sp" />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <View
        style="@style/divider_dropshadow"
        android:id="@+id/top_view"/>

</LinearLayout>
